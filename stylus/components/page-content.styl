.page-content-component
  width 100%
  +mobile()
    overflow scroll
  article
    max-width 768px
    width 100%
    height 100%
    padding 2em
    margin 0 auto
    display flex
    flex-direction column
    justify-content space-evenly
    +mobile()
      height 100vh
  header
    display flex
    .el-image
      width 100%
      height 100%
      background-position center
      background-size cover
    .box:first-child
      border-top-left-radius .25em
      border-bottom-left-radius .25em
      overflow hidden
      width 250px
      height 200px
    .box:last-child
      width 100%
      display flex
      flex-direction column
      justify-content space-between
      padding 1em 2em
      background-color $color-dark
      border-top-right-radius .25em
      border-bottom-right-radius .25em
    .el-title
      font-size 2em
  section
    .article-body
      border-radius .25em
      padding 2em
      background-color $color-dark
      font-size .85em
        
        